# Variáveis de Ambiente - Configuração do Bot IPTV

# ========================================
# INFORMAÇÕES DA EMPRESA
# ========================================
COMPANY_NAME=IPTV Premium
BOT_NAME=Ana

# ========================================
# MONGODB - Banco de Dados
# ========================================
# MongoDB local
MONGODB_URI=mongodb://localhost:27017/bot-iptv

# MongoDB Atlas (cloud)
# MONGODB_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/bot-iptv?retryWrites=true&w=majority

# ========================================
# SERVIDOR IPTV
# ========================================
IPTV_SERVER_URL=http://seu-servidor-iptv.com
IPTV_SERVER_PORT=8080

# ========================================
# PAGAMENTOS
# ========================================
# Chave PIX (CPF, CNPJ, Email, Telefone ou Chave Aleatória)
PIX_KEY=seu@email.com

# Nome do beneficiário PIX
MERCHANT_NAME=Sua Empresa LTDA

# URLs de APIs de pagamento (opcional)
# MERCADOPAGO_TOKEN=seu_token_aqui
# PAGSEGURO_TOKEN=seu_token_aqui

# ========================================
# NOTIFICAÇÕES
# ========================================
# Telefone do admin para notificações (formato: 5511999999999@c.us)
ADMIN_PHONE=5511999999999@c.us

# ========================================
# CONFIGURAÇÕES DO BOT
# ========================================
# Tempo de timeout de sessão (em minutos)
SESSION_TIMEOUT=15

# Duração do teste gratuito (em horas)
TEST_DURATION=4

# ========================================
# AMBIENTE
# ========================================
NODE_ENV=development
# NODE_ENV=production

# ========================================
# LOGS
# ========================================
LOG_LEVEL=info
# LOG_LEVEL=debug

# ========================================
# PORTA DO SERVIDOR (se usar Express)
# ========================================
PORT=3000
